<resources>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="colorControlNormal">@android:color/white</item>

    </style>

    <style name="Theme.MyThemeBottom" parent="Theme.MyTheme">
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#9bb</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#08C</item>
        <item name="colorControlNormal">#08C</item>
        <item name="colorControlActivated">#66a</item>
    </style>
    
    <style name="Theme.Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">#08C</item>
        <item name="android:textColor">#dd8</item>
    </style>

</resources>
