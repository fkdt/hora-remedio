<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">

    <Button
        android:id="@+id/btn_cad_remedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Remedio"
        android:onClick="clickCadRemedio"
        android:layout_centerVertical="true"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="20sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/bright_foreground_inverse_material_light"
        android:elevation="5dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_ls_remedios"
        android:layout_below="@id/btn_cad_remedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visualizar Remedios"
        android:onClick="clickLsRemedios"
        android:layout_centerVertical="true"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="20sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/bright_foreground_inverse_material_light"
        android:elevation="5dp"
        android:elegantTextHeight="true"/>

    <Button
        android:id="@+id/btn_cf_alarmes"
        android:layout_below="@id/btn_ls_remedios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurar Alarmes"
        android:textSize="20sp"
        android:onClick="click_hitme"
        android:layout_centerVertical="true"
        android:textColor="@color/material_blue_grey_800"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/bright_foreground_inverse_material_light"
        android:elevation="5dp"/>


</RelativeLayout>

